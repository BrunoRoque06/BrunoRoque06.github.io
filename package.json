{
  "private": true,
  "scripts": {
    "format": "git diff --cached --name-only | grep -E '^.*\\.(html|json|md|scss|yml)' | xargs --no-run-if-empty prettier --write"
  },
  "devDependencies": {
    "husky": "^3.0.1",
    "prettier": "^1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format"
    }
  }
}
