{
  "private": true,
  "scripts": {
    "format": "git diff --cached --name-only | grep -E '^.*\\.(html|json|md|scss|yml)' | xargs prettier --write"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "prettier": "^1.16.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format"
    }
  }
}
